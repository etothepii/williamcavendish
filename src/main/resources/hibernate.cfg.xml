<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>
        <property name="hibernate.connection.driver_class">
            com.mysql.jdbc.Driver
        </property>
        <mapping resource="tables/BLPU.hbm.xml"/>
        <mapping resource="tables/DeliveryPointAddress.hbm.xml"/>
        <mapping resource="tables/BoundedArea.hbm.xml"/>
        <mapping resource="tables/Classification.hbm.xml"/>
        <mapping resource="tables/Leaflet.hbm.xml"/>
        <mapping resource="tables/LeafletMap.hbm.xml"/>
        <mapping resource="tables/Person.hbm.xml"/>
        <mapping resource="tables/Route.hbm.xml"/>
        <mapping resource="tables/RouteMember.hbm.xml"/>
    </session-factory>
</hibernate-configuration>